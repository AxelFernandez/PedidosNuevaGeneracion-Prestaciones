<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_check_prod"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:text="Fiat 128" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_check_cant"
        tools:text="Cantidad"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_check_deletle"
    android:src="@android:drawable/ic_delete"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/item_check_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_check_deletle"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="right"
        android:textSize="18sp"
        android:maxLines="1"
        tools:text="1" />

</RelativeLayout>